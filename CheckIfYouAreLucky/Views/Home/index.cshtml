@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Button Example</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f5f5f5;
        }

        .container {
            max-width: 4000px;
            margin: 100px auto;
            text-align: center;
        }

        .anime-girl {
            width: 600px;
            height: 400px;
            background-image: url(https://i.imgur.com/KPY4BsQ.png);
            background-size: cover;
            margin: 30px auto;
            margin-right: 45    0px; /* Move the image to the left side */
        }



        .message-container {
            margin-top: 30px;
        }

        .btn-lg {
            padding: 10px 30px; /* Adjust the padding to make the button bigger */
            font-size: 24px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="anime-girl"></div>
      
        <h3 class="mb-4">Check your day's status! </h3>
        <form method="post" action="@Url.Action("GenerateMessage", "Home")">
            <button type="submit" class="btn btn-primary btn-lg">Click</button>
        </form>
        <div class="message-container">

            <p id="message" class="h5">
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    @ViewBag.Message
                }
            </p>
        </div>
    </div>
</body>
</html>
